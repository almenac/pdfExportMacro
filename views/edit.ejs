<% include partials/header %>

<div class="container">
    <h1>Edit <%= rpg.name %></h1>
    <form action="/rpgs/<%= rpg.id %>?_method=PUT" method="POST">
        <div class=row>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="name">RPG Name</label>
                <input type=text class="form-control" id="name" name="rpg[name]" value="<%= rpg.name %>">
            </div>    
            <div class="form-group col-lg-6 col-sm-12">
                <label for="system">Rule System</label>
                <input type=text class="form-control" id="system" name="rpg[system]" value="<%= rpg.system %>">
            </div>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="setting">Campaign Setting</label>
                <input type=text class="form-control" id="setting" name="rpg[setting]" value="<%= rpg.setting %>">
            </div>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="product_type">Type of Product</label>
                <input type=text class="form-control" id="product_type" name="rpg[product_type]" value="<%= rpg.product_type %>">
            </div>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="product_form">Form of Product</label>
                <input type=text class="form-control" id="product_form" name="rpg[product_form]" value="<%= rpg.product_form %>">
            </div>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="genre">Genre</label>
                <input type=text class="form-control" id="genre" name="rpg[genre]" value="<%= rpg.genre %>">
            </div>
            <div class="form-group col-lg-6 col-sm-12">
                <label for="is_read">Is it read?</label>
                <input type=text class="form-control" id="is_read" name="rpg[is_read]" value="<%= rpg.is_read %>">
            </div>
        </div>
        <button type="submit" class="btn btn-default">Submit Changes</button>
    </form>    
</div>


<% include partials/footer %>